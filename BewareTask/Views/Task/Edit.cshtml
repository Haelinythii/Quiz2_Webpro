@model BewareTask.Models.task
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

@{ 
    var data = (BewareTask.Models.task)ViewData["editID"];
}

<div>
    @using (Html.BeginForm("EditTask", "Task", FormMethod.Post))
    {
        //@Html.ValidationSummary()
        @Html.AntiForgeryToken()

        <div class="card">
            <div class="card-header">
                <div class="card-title" id="loginTitle">
                    <h3>Edit Task</h3>
                </div>
            </div>
            <div class="card-body">
                <div class="form-group">
                    @Html.LabelFor(m => m.id)
                    @Html.TextBoxFor(m => m.id, new { @class = "form-control", @placeholder = "New task name", @Value = data.id })
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.TaskName)
                    @Html.TextBoxFor(m => m.TaskName, new { @class = "form-control", @placeholder = "New task name", @Value = data.TaskName })
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.deadline)
                    @Html.EditorFor(m => m.deadline, new { @class = "form-control", @placeholder = "New task name", @Value = data.deadline })
                </div>
                <div class="form-group">
                    <input type="submit" name="submit" class="btn btn-danger" id="btnLogin" value="Edit Task" />
                </div>
            </div>
        </div>

    }

</div>

